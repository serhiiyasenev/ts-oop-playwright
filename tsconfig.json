{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2020",
    "rootDir": "./src",
    "outDir": "./dist",

    "strict": true,
    "isolatedModules": true,
    "skipLibCheck": true,

    // важливо: вимкнути, щоб не було TS1295
    "verbatimModuleSyntax": false,

    // опціонально
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "types": ["node"],
    "lib": ["esnext"],
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
